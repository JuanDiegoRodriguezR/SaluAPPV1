<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Registro">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="60dp"
                android:text="Registrase"
                android:textSize="35dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-16dp"
                tools:layout_editor_absoluteY="57dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Correo"
                android:textColor="#10AB6A"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="36dp"
                tools:layout_editor_absoluteX="46dp"
                tools:layout_editor_absoluteY="143dp" />

            <EditText
                android:id="@+id/CorreoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:hint="Tu correo aqui"
                android:maxLines="1"
                android:inputType="text"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="163dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Contraseña"
                android:textColor="#10AB6A"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="30dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="222dp" />

            <EditText
                android:id="@+id/Contraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:hint="********"
                android:maxLines="1"
                android:inputType="textPassword"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="242dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Confirmar Contraseña"
                android:textColor="#10AB6A"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="30dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="303dp" />

            <EditText
                android:id="@+id/Contraseña_verificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:inputType="textPassword"
                android:layout_marginRight="36dp"
                android:maxLines="1"
                android:hint="********"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="323dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Nombre de Usuario"
                android:textColor="#10AB6A"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="30dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="383dp" />

            <EditText
                android:id="@+id/Nombre_Usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:hint="Escriba su usuario"
                android:maxLines="1"
                android:inputType="text"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="403dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Telefono usuario"
                android:textColor="#10AB6A"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="30dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="383dp" />

            <EditText
                android:id="@+id/TelefonoUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:inputType="number"
                android:hint="Escriba su telefono"
                android:maxLength="10"
                android:maxLines="1"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="403dp" />

            <CheckBox
                android:id="@+id/terminoscondiciones"
                android:layout_width="334dp"
                android:layout_height="35dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="30dp"
                android:text="Acepto los Terminos y condiciones con la politica de privacidad"
                android:buttonTint="#0ea8eb"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="482dp"
                tools:ignore="MissingConstraints" />


            <Button
                android:id="@+id/Terminos"
                android:layout_width="329dp"
                android:layout_height="49dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#0ea8eb"
                android:gravity="center"
                android:text="Conoce nuestros terminos"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="46dp"
                tools:layout_editor_absoluteY="552dp" />

            <Button
                android:id="@+id/RegistroBoton"
                android:layout_width="329dp"
                android:layout_height="49dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#10AB6A"
                android:gravity="center"
                android:text="Continuar"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="46dp"
                tools:layout_editor_absoluteY="552dp" />

            <TextView
                android:id="@+id/iniciasesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="¿Tienes cuenta? Iniciar sesion"
                android:textColor="#10AB6A"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="628dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:visibility="invisible" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>